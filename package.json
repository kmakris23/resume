{
  "name": "kostas-makris-portfolio",
  "version": "1.0.0",
  "description": "A modern portfolio website for Kostas Makris - Full Stack Developer",
  "author": "Kostas Makris <contact@kmakris.gr>",
  "homepage": "https://kmakris.gr",
  "repository": {
    "type": "git",
    "url": "https://github.com/kmakris23/resume.git"
  },
  "keywords": [
    "portfolio",
    "angular",
    "tailwindcss",
    "fullstack-developer",
    "web-development"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev": "ng serve --open",
    "build": "cp PORTFOLIO.md public/portfolio.md 2>/dev/null || true && ng build",
    "build:prod": "cp PORTFOLIO.md public/portfolio.md 2>/dev/null || true && ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "serve": "ng serve --configuration production",
    "copy-portfolio": "./scripts/copy-portfolio.sh"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/platform-browser": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@types/marked": "^5.0.2",
    "marked": "^16.2.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.0",
    "@angular/cli": "^20.2.0",
    "@angular/compiler-cli": "^20.2.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2"
  }
}
